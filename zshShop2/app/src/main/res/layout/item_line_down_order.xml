<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/serial_number"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_background"
            android:gravity="center"
            android:text="05"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/serial_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点餐码: "
                    android:textSize="14sp" />

                <TextView
                    android:textColor="@color/text_color"
                    android:id="@+id/ordering_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2333"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <TextView
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="就餐人数: "
                    android:textSize="14sp" />

                <TextView
                    android:textColor="@color/text_color"
                    android:id="@+id/people_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下单时间: "
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/down_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23-33  33:33"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号: "
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2333333333333333"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:background="@color/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>


    <RelativeLayout
        android:visibility="visible"
        android:orientation="vertical"
        android:background="@color/blue3"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <View
            android:layout_marginLeft="10dp"
            android:background="@color/grey3"
            android:layout_width="match_parent"
            android:layout_height="0.001dp"></View>

        <TextView
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:id="@+id/t"
            android:layout_marginLeft="10dp"
            android:text="优惠"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_color"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/t"
            android:layout_marginLeft="10dp"
            android:text="红包抵扣"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/text_color"
            android:text="6.66"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/red_packet_deduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="0dp">

        <Button
            android:id="@+id/print_order"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:background="@drawable/line_frame"
            android:text="打印订单"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/unfoldRL"
                android:layout_width="25dp"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/line_frame">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="5dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/down" />
            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/l"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总数量："
                    android:textColor="@color/text_color" />

                <TextView
                    android:textSize="10sp"
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="666"
                    android:textColor="@color/text_color" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll"
                android:layout_below="@+id/l"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总价："
                    android:textColor="@color/text_color" />

                <TextView
                    android:textSize="10sp"
                    android:id="@+id/total_prices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="666"
                    android:textColor="@color/text_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/ll"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实际付款：￥"
                    android:textColor="@color/blue2" />

                <TextView
                    android:textSize="14sp"
                    android:id="@+id/actual_prices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="666"
                    android:textColor="@color/blue2" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="6dp"></View>
</LinearLayout>
