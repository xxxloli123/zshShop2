<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.xxxloli.zshmerchant.view.RatingBar
                xmlns:lxhRatingBar="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rb_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                lxhRatingBar:canEdit="true"
                lxhRatingBar:countSelected="0"
                lxhRatingBar:dividerWidth="2dp"
                lxhRatingBar:starCount="5"
                lxhRatingBar:stateResId="@drawable/five_rating_bar2"
                lxhRatingBar:widthAndHeight="14dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:textSize="12sp"
                android:text="2999-01-24  12:44"
                android:gravity="end"
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:textColor="@color/text_color"
            android:id="@+id/evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/reply"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:gravity="start"
            android:hint="请输入回复内容"
            android:textSize="12sp"
            android:background="@color/line_color"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <RelativeLayout
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="visible"
                android:layout_toLeftOf="@+id/sure"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:text="0/200"
                android:textColor="@color/hint_text_color"
                android:textSize="10sp"
                android:id="@+id/hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:visibility="visible"
                android:id="@+id/sure"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textColor="@color/text_color"
                android:text="确定"
                android:background="@color/bt"
                android:layout_width="30dp"
                android:layout_height="18dp" />

        </RelativeLayout>



    </LinearLayout>

   
</LinearLayout>
