<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.xxxloli.zshmerchant.Activity.CommodityClassify_2_Activity">

    <GridLayout
        android:rowCount="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button android:layout_columnWeight="1" />

        <Button
            android:layout_row="1"
            android:layout_rowWeight="1" />

    </GridLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/line_frame">

            <ImageView
                android:id="@+id/first_img"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/down" />

            <TextView
                android:id="@+id/first_level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="育婴"
                android:textColor="@color/text_color"
                android:textSize="11sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/show2"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="2"
            android:background="@drawable/line_frame"
            android:visibility="gone">

            <TextView
                android:id="@+id/second_level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="育婴"
                android:textColor="@color/text_color"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/second_img"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/down" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/show3"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/line_frame"
            android:visibility="gone">

            <TextView
                android:id="@+id/thirdly_level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="育婴"
                android:textColor="@color/text_color"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/thirdly_img"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/down" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/show4"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/line_frame"
            android:visibility="gone">

            <TextView
                android:id="@+id/fourthly_level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="育婴"
                android:textColor="@color/text_color"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/fourthly_img"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/down" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/show5"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/line_frame"
            android:visibility="gone">

            <TextView
                android:id="@+id/fifth_level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="育婴"
                android:textColor="@color/text_color"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/fifth_img"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/down" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/show6"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/line_frame"
            android:visibility="gone">

            <TextView
                android:id="@+id/sixth_level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxEms="4"
                android:text="育婴"
                android:textColor="@color/text_color"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/sixth_img"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/down" />

        </RelativeLayout>

        <View
            android:id="@+id/back_burner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:visibility="visible"></View>

    </LinearLayout>

</LinearLayout>
